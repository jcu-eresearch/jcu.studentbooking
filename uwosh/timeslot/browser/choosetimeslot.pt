<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="uwosh.timeslot">

<head>

    <metal:javascript fill-slot="javascript_head_slot">
         <script type="text/javascript">
           jq(document).ready(function() {

              jq("input[name='submittedApplicationForAdvancedStanding']").attr('disabled','disabled');
              jq("input[name='slotSelection']:checked").parents('div.field tr').css('background-color','#cef');

              jq("input[name='intendToApplyForAdvancedStanding']").click(function() { 
		   if (this.value == 1) { 
                       jq("input[name='submittedApplicationForAdvancedStanding']").enable();
		       jq('#archetypes-fieldname-submittedApplicationForAdvancedStanding').fadeIn();
		   } else {
                       jq("input[name='submittedApplicationForAdvancedStanding']").attr('disabled','disabled');
		       jq('#archetypes-fieldname-submittedApplicationForAdvancedStanding').fadeOut();
              
		   }
	      });
 
              asField = jq("#intendToApplyForAdvancedStanding_1");
              if (asField.attr('checked')) {
                  asField.click();
              }

              jq("tr.timeslot").click(function() { 
                  input = jq(this).find("input[name='slotSelection']")
                  if (input.length > 0) {
                          input.attr('checked','checked');
      	                  jq("tr.session-selected-True").removeClass('session-selected-True');
		          jq(this).addClass('session-selected-True');
                  }
              });

              function changePage(to_id) {
                        location.hash = 'contactInfo'; 
                        jq('#fieldsetlegend-'+to_id).click();
                        return false;
              } 
              jq('#nextPageButton').click( function() { return changePage('extraInfo'); });
              jq('#previousPageButton').click( function() { return changePage('slotSelection'); });


              jq('a#ehs-select-course').prepOverlay({
		    subtype:'ajax',
		    filter: '#content>*:not(div.configlet),dl.portalMessage.error,dl.portalMessage.info',
                    closeselector: 'a#return-to-booking',
                    config:{mask:{color:'#000'}}
		    });

              jq('a#ehs-manage-bookings, a#ehs-admin-booking').prepOverlay({
		    subtype:'ajax',
		    filter: '#content>*:not(div.configlet),dl.portalMessage.error,dl.portalMessage.info',
                    closeselector: 'a#return-to-booking',
                    formselector: 'form[name="ehs-manage-bookings"],form[name="ehs-book-user"]',
                    noform: 'reload',
                    config:{mask:{color:'#000'},
                            onBeforeClose:function(){
                                             if (jq("div.overlay dl.portalMessage.info:contains('booking was cancelled')").length == 1) {
                                                location.reload();
                                             }
                                          } 
                           } 
		    });

              jq('#ehs-booking-results-link').prepOverlay({
                    subtype:'inline',
                    config:{expose:{color:'#000'}}
              }).click();


           });
         </script>
    </metal:javascript>
</head>

<body>
  <div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
                    tal:define="allowSignupForMultipleSlots context/getAllowSignupForMultipleSlots;
                                showSlotNames context/showSlotNames;
                                showEditLinks view/showEditLinks;
                                showInputFields view/showInputFields;
                                isBookingStaff view/isBookingStaff;
                                student_details view/student_details;
                                booked_session view/getBookedSession;
                                columns python:5;
                                errors view/errors;">
      
	<dl class="collapsible collapsedOnLoad">
	    <dt class="collapsibleHeader">
	      Debug 
	    </dt>
	    <dd class="collapsibleContent">
              <div tal:content="view/student_details">asfd</div>
	    </dd>
	 </dl>

      <div id="ehs-booking-results"
           tal:condition="python:booked_session">
       <a href="#ehs-booking-results" id="ehs-booking-results-link">&nbsp;</a>
       <div class="close"><span>Close</span></div>
       <div class="pb-ajax">  
         <div>
           <h2>Booking successful</h2>
           <p>You have been successfully booked into the following Enrolment Help Session:</p>

           <dl>
             <dt>Time and date</dt>
             <dd tal:content="booked_session/getTimeAndDate">01:00 pm - 02:30 pm, 20 September 2011</dd>
             <dt>Session name</dt>
             <dd tal:content="booked_session/name">All courses</dd>
             <dt>Faculty</dt>
             <dd tal:content="booked_session/getFacultyName">FSE</dd>
             <dt>Location</dt>
             <dd>
		  <a href="#" class="link-plain" target="_blank" 
                 tal:omit-tag="not:booked_session/showRoomUrl"
                 tal:attributes="href booked_session/roomUrl">
                     <span class="room-number"
                           tal:content="booked_session/roomNumber">
                           Room</span></a><tal:location condition="booked_session/slotLocation">, <span tal:replace="booked_session/slotLocation" /></tal:location>
                  (<span tal:replace="booked_session/getCampusName">Campus</span>) 
             </dd>
           </dl>

           <p>A confirmation email with these details, as well as what to bring, has been sent to you.</p>

           <div>
              <a href="#" class="close" id="return-to-booking"
                 tal:attributes="href string:${context/absolute_url}">
                  Return to booking page</a>
              <a href="#" tal:attributes="href view/logout_url;">
                  Return to Step 4: Enrol</a>
           </div>

         </div>
       </div>
      </div>

      <h2 class="booking-page-title"><span tal:replace="context/Title">Book a session</span> 
             <tal:no-nonfaculty 
                  condition="python: view.faculty_name != 'Non-faculty'">- <span tal:replace="view/faculty_name">Faculty of Law, Business and the Creative Arts</span>
             </tal:no-nonfaculty>
     </h2>
      <div tal:condition="context/contactInfo" id="contactInfo"
           tal:content="structure context/contactInfo">Contact info as HTML
      </div>

      <ul>
	<li tal:condition="not:isBookingStaff">
           <a id="ehs-manage-bookings"
              tal:attributes="href string:${context/absolute_url}/@@show-bookings">Manage existing bookings</a></li>
	<li tal:condition="not:isBookingStaff">
           <a id="ehs-select-course"
              tal:attributes="href string:${context/absolute_url}/@@select-course">Select a different course</a></li>
	<li tal:condition="isBookingStaff">
           <a id="ehs-admin-booking"
              tal:attributes="href string:${context/absolute_url}/@@book-user">Book a user in</a></li>
      </ul>

		
      <form method="post" class="enableFormTabbing"
               tal:attributes="action string:${context/absolute_url};"
               tal:define="selectionField string:slotSelection;">

    <fieldset id="fieldset-slotSelection">
      <legend id="fieldsetlegend-slotSelection">Enrolment sessions</legend>

       <div id="archetypes-fieldname-slotSelection" class="field"
            tal:attributes="class python:'field'+(selectionField in errors and ' error' or '');">
          
          <label for="slotSelection" class="formQuestion">Enrolment sessions</label>
          <span title="Required" class="fieldRequired" tal:condition="showInputFields">
            (Required)
          </span>
          <div id="slotSelection_help" class="formHelp" tal:condition="showInputFields">Select the session that you would like to book into. <strong>Selected course:</strong>
                   <span tal:replace="student_details/courseCode" /> - <span tal:replace="student_details/courseFullName" /> (<span tal:replace="student_details/courseYear" />; <span tal:replace="student_details/defaultCampus" />)
          </div>
          
        <div class="fieldErrorBox" tal:content="python: selectionField in errors and errors[selectionField] or ''"> </div>
        <table class="plain" tal:define="days context/getDays"
               style="width: 100%; background-color: white;">
	  
	  <tr tal:condition="not:days" style="background-color: #F0F0F0">
	    <th style="border: none">
	      <h3>There are no upcoming sessions.</h3>
	    </th>
	  </tr>

	    <tr>
	      <th tal:condition="showSlotNames" style="width: 40%;">Name</th>
	      <th>Time</th>
	      <th>Room/Location</th>
	      <th>Spaces Available</th>
	      <th tal:condition="showInputFields">Select</th>
	      <th tal:condition="showEditLinks">Admin</th>
	    </tr>

	  <tal:block tal:repeat="day days">
	    <tr style="background-color: #F0F0F0">
	      <td colspan="5" style="text-align: left; border: none"
                  tal:attributes="colspan columns;">
		<h4 style="float: left; margin:0 0.5em 0 0;" tal:content="day/Title" />
	        <div style="float: left;" tal:condition="showEditLinks">
		  <a tal:attributes="href string:${day/absolute_url}">View</a>
		  &nbsp;<a tal:attributes="href string:${day/absolute_url}/edit">Edit</a>
		  &nbsp;<a tal:attributes="href string:${day/absolute_url}/@@clone">Clone</a>
		  &nbsp;<a tal:attributes="href string:${day/absolute_url}/createObject?type_name=Time+Slot">Add session</a>
	        </div>
	      </td>
	    </tr>
		  
	    
	    <tal:block tal:define="timeSlots python:day.getTimeSlots(view.faculty_code)">
	      <tr tal:condition="not:timeSlots">
		<td colspan="5" tal:attributes="colspan columns;">There are no sessions available on this date.</td>
	      </tr>
	     <tal:rows repeat="timeSlot timeSlots">
	      <tr tal:define="isUserSignedUp timeSlot/isCurrentUserSignedUpForThisSlot;
                              isChecked python:view.checkTimeSlot(timeSlot);"
                  tal:attributes="class string:${timeSlot/getStyleClass} users-session-${isUserSignedUp} session-selected-${isChecked};">
		<td tal:condition="showSlotNames">
		  <strong tal:content="timeSlot/name">Session Name</strong>
		    <em tal:condition="timeSlot/isCurrentUserSignedUpForThisSlot"><strong>&rarr; Your session &larr;</strong></em>
		</td>
		<td>
		  <span tal:content="timeSlot/getTimeRange" />
		</td>
                <td>
		  <a href="#" class="link-plain" target="_blank" 
                 tal:omit-tag="not:timeSlot/showRoomUrl"
                 tal:attributes="href timeSlot/roomUrl">
                     <span class="room-number"
                           tal:content="timeSlot/roomNumber"
                           tal:attributes="title timeSlot/slotLocation;">Room</span></a>
                  (<span tal:replace="timeSlot/getCampusName">Campus</span>) 
                </td>
		<td>
		  <span tal:content="timeSlot/getNumberOfAvailableSpots" />
		</td>
		<td style="text-align: center" tal:condition="showInputFields">
		  <input type="radio" name="slotSelection"
		         tal:attributes="value timeSlot/UID;
                                       checked isChecked;" />
	        </td>
                <td tal:condition="showEditLinks">
                  <a tal:attributes="href timeSlot/absolute_url;">View</a>
                  &nbsp;<a tal:attributes="href string:${timeSlot/absolute_url}/edit">Edit</a>
                  &nbsp;<a tal:attributes="href string:${timeSlot/absolute_url}/@@clone">Clone</a>
                </td>
	      </tr>
             </tal:rows>
	    </tal:block>
	  </tal:block>
	</table>
       </div>

       <input type="button" id="nextPageButton" value="Next page &rarr;" tal:condition="showInputFields" />
     </fieldset>

     <fieldset id="fieldset-extraInfo" tal:condition="showInputFields">
        <legend id="fieldsetlegend-extraInfo">Your details</legend>
			   
          <label class="formQuestion">Required information</label>
          <div class="formHelp">Enter the following information to proceed to book your session. All fields marked <span title="Required" class="fieldRequired">&nbsp;</span>are required.</div>
          <br />

          <tal:fields tal:define="fields view/getExposedFields;">
             <tal:field tal:repeat="field fields">
                 <metal:fieldMacro use-macro="python:here.widget(field.getName(), mode='edit', field=field)" />
             </tal:field>

         </tal:fields>

       <input type="button" id="previousPageButton" value="&larr; Previous page" />
    </fieldset>

	<div tal:condition="showInputFields">
	  <br />
          <label class="formQuestion">Complete your booking</label>
          <div class="formHelp">Once you've selected a enrolment session and filled out your details on the second page, click 'Submit Form'.</div>
	  <input type="submit" name="form.button.Submit" value="Submit Form"
                 id="submitButton" />
	  <input type="hidden" name="form.submitted" value="1" />
	  <input tal:attributes="value member" type="hidden" name="memberToAssign" />
          <span tal:replace="structure context/@@authenticator/authenticator"/>
	</div>

      </form>

    </tal:main-macro>
  </div>
</body>
</html>
